<div class="category-filters-wrap d-lg-block d-none">
  <div class="row align-items-center">
    <div class="col-xl-7 col-lg-5 d-flex align-items-center">
    </div>
    <div class="col-xl-5 col-lg-7" data-hook="taxon_products">
      <ul class="" style="display:none;">
        <li><%= link_to "Ascending name", request.parameters.merge(sort_by: 'name-a-z'), id: 'ascending_name', class: "assending-filter", 'data-turbolinks': 'false', aria: { label: "Natures Ascending name link" } %></li>
        <li><%= link_to "Descending name", request.parameters.merge(sort_by: 'name-z-a'), id: 'descending_name', class: "descending-filter", 'data-turbolinks': 'false', aria: { label: "Natures Descending name link" } %></li>
      </ul>
      <div class="sorting-filter d-flex align-items-center justify-content-end" >
        <label>Sort by:</label>
        <% active_klass_ascend_by_name = params[:sort_by].present? && params[:sort_by] == "name-a-z" ? 'active' : '' %>
        <button type="button" class="product-sort-js <%= active_klass_ascend_by_name %>" data-filter-type="assending-filter">A to Z</button>

        <% active_klass_descend_by_name = params[:sort_by].present? && params[:sort_by] == "name-z-a" ? 'active' : '' %>
        <button type="button" class="product-sort-js <%= active_klass_descend_by_name %>" data-filter-type="descending-filter">Z to A</button>
      </div>
    </div>
  </div>
</div>
