<% @body_id = 'recipe-details' %>
<div class="modal recipe-added-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="added-to-cart-toast" >
      <div class="message d-flex justify-content-center" >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
        </svg>
        <p>Successfully added to cart!</p>
      </div>
    </div>
    <div class="modal-content">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="close-recipe-products-modal" >
        <span aria-hidden="true">
          <%= icon(name: 'close',
            classes: 'd-block',
            width: 10,
            height: 10) %>
        </span>
      </button>
      <div class="modal-body recipe-added-container d-flex flex-column p-4">
        
      </div>
    </div>

    <div class="recipe_modal_footer">
      
    </div>

  </div>
</div>
